<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Calculadora de Máscara de IP</title>
  </head>
  <body>
      
      <div class="container">
        <h1 class="mb-3">Calculadora de Máscara de IP</h1>

        <form action="/calculate" method="POST">
          <div class="row">
              <div class="mb-3 col-md-9">
                  <label for="ip" class="form-label">IP</label>
                  <input type="text" class="form-control" id="ip" name="ip" placeholder="127.0.0.1" required>
              </div>

              <div class="mb-3 col-md-3">
                  <label for="mask" class="form-label">Máscara de Bity</label>
                  <select class="form-select" name="mask" id="mask">
                      <option value="8" selected>/8</option>
                      <% for (let i = 9; i <= 32; i++) { %>
                          <option value="<%= i %>">/<%= i %></option>          
                      <% } %>
                  </select>
              </div>

              <div class="mb-3 col-md-3">
                  <button type="submit" class="btn btn-primary mb-3">Calcular</button>
              </div>
          </div>
        </form>
        <div class="row mt-5">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                      <th scope="col">IP</th>
                      <th scope="col">Máscara de Bity</th>
                      <th scope="col">Classe</th>
                      <th scope="col">Tipo</th>
                      <th scope="col">Endereço de Rede</th>
                      <th scope="col">Máscara de Sub-Rede</th>
                      <th scope="col">Broadcast</th>
                      <th scope="col">Intervalo</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><%= netmask.ip %></td>
                      <td><%= netmask.bitmask %></td>
                      <td><%= netmask.class %></td>
                      <td><%= netmask.type %></td>
                      <td><%= netmask.base %></td>
                      <td><%= netmask.mask %></td>
                      <td><%= netmask.broadcast %></td>
                      <td><%= netmask.first %> - <%= netmask.last %></td>
                    </tr>
                  </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>